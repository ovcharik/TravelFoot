{
  "/": {
    "method"    : "get",
    "controller": "home",
    "action"    : "index"
  },
  
  
  "/signin": {
    "method"    : "post",
    "controller": "sessions",
    "action"    : "create"
  },
  "/signout": {
    "method"    : "get",
    "controller": "sessions",
    "action"    : "destroy"
  },
  "/signup": [
    {
      "method"    : "get",
      "controller": "registrations",
      "action"    : "index"
    }, {
      "method"    : "post",
      "controller": "registrations",
      "action"    : "create"
    }
  ],
  
  "/buffer": {
    "method"    : "get",
    "controller": "buffer",
    "action"    : "index"
  },
  
  "/sights/(:page)?": {
    "method"    : "get",
    "controller": "sights",
    "action"    : "index"
  }
}
