{
  "/": {
    "method"    : "get",
    "controller": "home",
    "action"    : "index"
  },
  
  
  "/signin": {
    "method"    : "post",
    "controller": "sessions",
    "action"    : "create"
  },
  "/signout": {
    "method"    : "get",
    "controller": "sessions",
    "action"    : "destroy"
  },
  "/signup": [
    {
      "method"    : "get",
      "controller": "registrations",
      "action"    : "index"
    }, {
      "method"    : "post",
      "controller": "registrations",
      "action"    : "create"
    }
  ],
  
  
  "/search/buffer": {
    "method"    : "get",
    "controller": "search",
    "action"    : "buffer"
  },
  
  "/sights/new/:id": {
    "method"    : "get",
    "controller": "sights",
    "action"    : "new"
  },
  "/sights/edit/:id": {
    "method"    : "get",
    "controller": "sights",
    "action"    : "edit"
  },
  "/sights/(page/(:page))?": {
    "method"    : "get",
    "controller": "sights",
    "action"    : "index"
  },
  "/sights": {
    "method"    : "post",
    "controller": "sights",
    "action"    : "create"
  },
  "/sights/:id": [
    {
      "method"    : "get",
      "controller": "sights",
      "action"    : "show"
    },
    {
      "method"    : "put",
      "controller": "sights",
      "action"    : "update"
    },
    {
      "method"    : "delete",
      "controller": "sights",
      "action"    : "destroy"
    }
  ]
}
